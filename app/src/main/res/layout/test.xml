<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seven Wonders"
        android:textColor="#ffffff"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"/>
     <RelativeLayout
         android:layout_marginTop="25dp"
         android:layout_marginLeft="25dp"
         android:layout_toLeftOf="@id/txt_header"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_below="@id/txt_header"
         android:background="#ffffff">
         <ImageView
             android:id="@+id/iv_apartment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:src="@drawable/ic_baseline_apartment_24"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Apartment"
             android:layout_centerInParent="true"
             android:layout_below="@id/iv_apartment"
             android:textColor="#673AB7"/>
     </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@id/txt_header"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/txt_header"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/iv_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_business_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business"
            android:layout_centerInParent="true"
            android:layout_below="@id/iv_business"
            android:textColor="#673AB7"/>
    </RelativeLayout>


</RelativeLayout>